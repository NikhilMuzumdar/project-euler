# A Func to check if a number is prime and return True
def is_prime(number):
  result = True  
  for i in range(2, (int(number/2))+1):
    if number % i == 0:
      result = False
      break    
  return result

# A Function to return the largest prime factor
def factors(number):
  factors = [element for element in range(1, int(number/2+1)) if number % element == 0]
  for element in factors[::-1]: # start checking from the largest element and stop once found
    if is_prime(element):
      print(f"The largest prime factor is {element}")
      break

factors(600851475143)
